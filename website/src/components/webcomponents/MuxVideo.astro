---
const {
  autoplay,
  height,
  loop,
  muted,
  poster,
  playbackId,
  playsinline,
  width,
} = Astro.props;
---

<mux-video
  {autoplay}
  {height}
  {loop}
  {muted}
  {poster}
  playback-id={playbackId}
  {playsinline}
  {width}
  stream-type="on-demand"
></mux-video>

<script>
  await import('@mux/mux-video');
</script>

<style lang="scss" is:global>
  mux-video {
    width: 100%;
    &::part(video) {
      height: auto;
    }
  }
</style>
