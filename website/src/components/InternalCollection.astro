---
import AllGigs from './internalCollections/AllGigs.astro';
import AllReleases from './internalCollections/AllReleases.astro';
import CartItems from './internalCollections/CartItems.astro';

const {
  collectionName,
  filterGigs,
  limitGigs,
  lang
} = Astro.props;

---

<!-- For some reason `if` and `switch` didn't work -->
{ collectionName === 'allGigs' &&
  <AllGigs {filterGigs} {limitGigs} {lang}></AllGigs>
}
{ collectionName === 'allReleases' &&
  <AllReleases {lang}></AllReleases>
}
{ collectionName === 'cartItems' &&
  <CartItems {lang}></CartItems>
}